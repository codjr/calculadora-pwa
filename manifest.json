{
  "id": "/calculadora-pwa",
  "name": "Calculadora PWA",
  "short_name": "Calc",
  "description": "Calculadora rápida, offline e instalável.",
  "start_url": "/calculadora-pwa/index.html",
  "scope": "/calculadora-pwa/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "background_color": "#111827",
  "theme_color": "#111827",
  "lang": "pt-BR",

  "icons": [
    {
      "src": "icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],

  "related_applications": [
    { "platform": "webapp", "url": "https://codjr.github.io/calculadora-pwa/" }
  ],
  "prefer_related_applications": false,

  "share_target": {
    "action": "/calculadora-pwa/index.html",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": { "title": "title", "text": "text", "url": "url" }
  },

  "iarc_rating_id": "e10",

  "widgets": [
    {
      "name": "Mini Calculadora",
      "description": "Widget compacto para cálculos rápidos",
      "src": "/calculadora-pwa/index.html",
      "sizes": "2x2"
    }
  ],

  "screenshots": [
    {
      "src": "icons/screen1.png",
      "sizes": "1080x1920",
      "type": "image/png"
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "web+calc",
      "url": "/calculadora-pwa/index.html?expr=%s"
    }
  ],

  "shortcuts": [
    {
      "name": "Novo cálculo",
      "short_name": "Novo",
      "url": "/calculadora-pwa/index.html?novo=true",
      "icons": [{ "src": "icons/icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Histórico",
      "short_name": "Histórico",
      "url": "/calculadora-pwa/index.html?historico=true",
      "icons": [{ "src": "icons/icon-192.png", "sizes": "192x192" }]
    }
  ]
}
